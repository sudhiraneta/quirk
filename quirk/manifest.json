{
  "manifest_version": 3,
  "name": "Quirk - AI Personality Insights",
  "version": "2.0.0",
  "description": "AI-powered personality analysis from your Pinterest and browsing habits",
  "permissions": [
    "sidePanel",
    "storage",
    "history",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.pinterest.com/*",
    "https://*.instagram.com/*",
    "https://*.youtube.com/*",
    "https://*.twitter.com/*",
    "https://*.tiktok.com/*",
    "https://*.amazon.com/*",
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Open Quirk",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.pinterest.com/*"],
      "js": ["personality-templates.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
