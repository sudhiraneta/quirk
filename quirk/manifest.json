{
  "manifest_version": 3,
  "name": "Quirk - AI Personality Insights",
  "version": "2.1.0",
  "description": "AI-powered personality insights and productivity analytics from your browsing habits",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "history",
    "identity",
    "identity.email"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_title": "Quirk",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
